<aura:component description="RC_basketModel" implements="flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes" controller="RC_BasketModelController">
    <aura:attribute type="Boolean" name="isOpened" default="false"/>
    <aura:handler event="c:RC_ModalClosedEvent" action="{!c.setModalFlag}"/>
    <aura:registerEvent type="c:RC_OvermouseCloseEvent" name="modalCloseEvent"/>
    <aura:registerEvent type="c:ToastEvent" name="toastEvent"/>

    <div  onclick="{!c.onClicked}" onmouseover="{!c.openmodal}" onmouseleave="{!c.closeBasketModal}" style="height:auto; width:auto; border:0px solid black; margin 5px;" class="basket mypopover" >
        <lightning:overlayLibrary aura:id="overlayLib"/>
        <img src="{!$Resource.NStyle+'/niture/icon/3.png'}"/>

    </div>
    </aura:component>
