<aura:component description="RC_orderHistoryItem" implements="force:hasRecordId" access="global" controller="RC_OrderHistoryItemController">
    <aura:attribute type="Decimal" name="quantity"/>
    <aura:attribute type="String" name="productName"/>
    <aura:attribute name="imagesLinks" type="List"/>
    <aura:attribute name="recordId" type="String"/>
    <aura:attribute type="Decimal" name="price"/>
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>


    <div style="display: flex; margin-bottom: 6px; "  >
        <a href="{! $Site.siteUrlPrefix + '/product/' + v.recordId}">
            <img src="{!v.imagesLinks[0]}" width="100" height="150" style="margin-right:15px;"/>
        </a>
    <div style="color:black">
        Product: {!v.productName} <br/>
        Quantity : {!v.quantity}  <br/>
        Per item price: {!v.price} â‚¬<br/>
        --------------------------------------------------------------------------------- <br/>
    </div>
    </div>

</aura:component>
